<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vardan.week4exercices2drawer.activity.GoodsDescriptionActivity"
    tools:showIn="@layout/activity_goods_description">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_size_height">

    </android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/video_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_play_arrow_black_24dp"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
